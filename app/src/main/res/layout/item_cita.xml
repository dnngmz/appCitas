<?xml version="1.0" encoding="utf-8"?>
<!-- Main parent layout with rounded corners and padding -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_cita"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:radius="12dp"
    app:cardCornerRadius="28dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/my_secondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/tv_label_mascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mascota:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/my_secondary" />

            <TextView
                android:id="@+id/tvMascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/my_secondary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/tv_label_veterinario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Veterinario:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/my_secondary" />

            <TextView
                android:id="@+id/tvVeterinario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/my_secondary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/tv_label_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/my_secondary" />

            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/my_secondary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/tv_label_motivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motivo:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/my_secondary" />

            <TextView
                android:id="@+id/tvMotivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/my_secondary" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>